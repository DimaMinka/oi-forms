color__border = #dcdcdc

.form
  &__group
    position relative

.dynamic
  &__group
    position relative

  &__add
    bottom: -0.8em;
    position: absolute;
    left: 0;
    width: 100%;

    &-button
      border-radius 50%
      width 2em
      height 2em
      line-height 1
      font-size 1em
      text-align center
      padding 0
      align-items center
      justify-content center
      margin: auto;
      display: block
      text-decoration none
      background-color: #fff !important;
      color: #000;
      border-width: 2px;
      border-color: color__border
      border-style: solid;
      box-sizing: border-box;
      font-family: monospace;
      font-weight: 300
      position: relative;
      z-index: 2;

      &:hover, &:active, &:focus
        text-decoration none

